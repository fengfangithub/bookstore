<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fengfan.bookstore.dao.AddressDao">

    <!-- 查询地址列表 -->
    <select id="selectAddress" resultMap="address">
        select * from tb_address where user_id = #{userID} and is_delete != 1
    </select>

    <!-- 添加一个地址 -->
    <insert id="insertAddress" parameterType="addressEntity">
        insert into tb_address (name, sex, phone,province, city, county, is_default, user_id, detailed_address)
        values (#{name},#{sex},#{phone},#{province},#{city},#{county},#{isDefault},#{userID},#{detailedAddress})
    </insert>

    <!-- 修改地址信息 -->
    <update id="udateAddress" parameterType="addressEntity">
        update tb_address
        <set>
            <if test="name != null">name = #{name},</if>
            <if test="sex != null">sex = #{sex},</if>
            <if test="phone != null">phone = #{phone}</if>
            <if test="province != null">province = #{province},</if>
            <if test="city != null">city = #{city},</if>
            <if test="county != null">county = #{county},</if>
            <if test="detailedAddress != null">detailed_address = #{detailedAddress},</if>
            <if test="isDefault != null">name = #{isDefault},</if>
            <if test="userID != null">user_id = #{userID},</if>
            <if test="isDelete != null">is_delete = #{isDelete}</if>
        </set>
        where id = #{id}
    </update>

    <resultMap id="address" type="com.fengfan.bookstore.entity.AddressEntity">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="sex" column="sex"/>
        <result property="phone" column="phone"/>
        <result property="province" column="province"/>
        <result property="city" column="city"/>
        <result property="county" column="county"/>
        <result property="detailedAddress" column="detailed_address"/>
        <result property="isDefault" column="is_default"/>
        <result property="userID" column="user_id"/>
        <result property="isDelete" column="id_delete"/>
    </resultMap>
</mapper>